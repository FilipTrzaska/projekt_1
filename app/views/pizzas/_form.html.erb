<%= simple_form_for @pizza, :html => { :multipart => true } do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select ad category") %>
    <%= f.input :title, label: "Pizza Name" %>
    <%= f.input :description %>
    <%= f.input  :author %>
    <%= f.button :submit %>
<% end %>