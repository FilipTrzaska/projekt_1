<h2><%= @pizza.title %></h2>
<h3><%= @pizza.author %></h3>
<h4><%= @pizza.category.name %></h4>
<p><%= @pizza.description %></p>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>

    <% if @pizza.user_id == current_user.id %>
    
        <%= link_to "Edit", edit_pizza_path(@pizza) %>
        <%= link_to "Delete", pizza_path(@pizza), method: :delete, data: { confirm: "Are you sure?" } %>
        
    <% end %>
    
<% end %>    